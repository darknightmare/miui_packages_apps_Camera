<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.GridSettingPopupWhiteBalance style="@style/SettingPopupWindow"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/title" style="@style/PopupTitleText" />
        </FrameLayout>
        <RelativeLayout android:id="@id/content_layout" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <GridView android:id="@id/settings_grid" android:clickable="true" android:choiceMode="singleChoice" style="@style/SettingItemGrid" />
            <com.android.camera.ui.WheelView android:id="@id/wheel_view" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" />
        </RelativeLayout>
        <View style="@style/PopupTitleSeperator" />
    </LinearLayout>
</com.android.camera.ui.GridSettingPopupWhiteBalance>