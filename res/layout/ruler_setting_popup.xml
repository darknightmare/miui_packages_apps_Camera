<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.RulerSettingPopup style="@style/SettingPopupWindow"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/title" style="@style/PopupTitleText" />
        </FrameLayout>
        <RelativeLayout android:paddingTop="@dimen/ruler_line_layout_paddingTop" android:paddingBottom="@dimen/ruler_line_layout_paddingBottom" android:clickable="true" style="@style/SettingItemRulerLine">
            <LinearLayout android:orientation="horizontal" android:id="@id/ruler_scale" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignLeft="@id/ruler_line" />
            <ImageView android:id="@id/ruler_line" android:background="@drawable/ic_camera_exposure_line" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ruler_line_marginTop" android:layout_below="@id/ruler_scale" android:layout_centerInParent="true" />
            <ImageView android:id="@id/ruler_corsor" android:background="@drawable/btn_camera_exposure_cursor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/ruler_scale" />
        </RelativeLayout>
        <View style="@style/PopupTitleSeperator" />
    </LinearLayout>
</com.android.camera.ui.RulerSettingPopup>